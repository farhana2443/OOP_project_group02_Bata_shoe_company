<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop_project_group02_bata_shoe_company.SulthanaTasnim.RetailManager.RMG8Report">
   <children>
      <Label layoutX="14.0" layoutY="21.0" text="Reports">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label layoutX="14.0" layoutY="53.0" text="Report Type" />
      <ComboBox fx:id="reportTypeCB" layoutX="92.0" layoutY="49.0" prefWidth="150.0" promptText="Sales Performance, Return Rate, Category-wise Sales" />
      <Button fx:id="generateReportBtn" layoutX="248.0" layoutY="49.0" mnemonicParsing="false" text="Generate Report" />
      <TextArea fx:id="reportSummaryTA" editable="false" layoutX="14.0" layoutY="113.0" prefHeight="270.0" prefWidth="213.0" promptText="Report Details" />
      <Label layoutX="14.0" layoutY="88.0" text="Report Summary" />
      <LineChart fx:id="summaryChart" layoutX="248.0" layoutY="113.0" prefHeight="200.0" prefWidth="331.0">
        <xAxis>
          <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
      </LineChart>
      <Label layoutX="287.0" layoutY="88.0" text="Graphical Summary" />
      <Button layoutX="242.0" layoutY="336.0" mnemonicParsing="false" onAction="#generateAndExportPDF" text="Export PDF" />
      <Button layoutX="339.0" layoutY="336.0" mnemonicParsing="false" onAction="#printReport" text="Print" />
   </children>
