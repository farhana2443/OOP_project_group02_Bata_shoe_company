<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.oop_project_group02_bata_shoe_company.HrDashboard"
            prefHeight="500.0" prefWidth="800.0">

    <children>

        <!-- Header -->
        <Label text="HR Dashboard"
               layoutX="20" layoutY="20"
               style="-fx-font-size: 24px; -fx-font-weight: bold;" />

        <!-- Main layout: Left menu + Center content -->
        <HBox layoutY="70" layoutX="20" spacing="20">
            <children>

                <!-- Sidebar Menu -->
                <VBox spacing="10">
                    <children>

                        <Button text="Recruitment"
                                fx:id="btnRecruitment"
                                prefWidth="180"
                                onAction="#onRecruitmentClicked"/>

                        <Button text="Attendance / Leave"
                                fx:id="btnAttendance"
                                prefWidth="180"
                                onAction="#onAttendanceClicked"/>

                        <Button text="Performance Review"
                                fx:id="btnPerformance"
                                prefWidth="180"
                                onAction="#onPerformanceClicked"/>

                        <Button text="Employee Records"
                                fx:id="btnRecords"
                                prefWidth="180"
                                onAction="#onEmployeeRecordsClicked"/>

                        <Button text="Payroll Inputs"
                                fx:id="btnPayroll"
                                prefWidth="180"
                                onAction="#onPayrollClicked"/>

                        <Button text="Grievances"
                                fx:id="btnGrievances"
                                prefWidth="180"
                                onAction="#onGrievancesClicked"/>

                        <Button text="Training Schedule"
                                fx:id="btnTraining"
                                prefWidth="180"
                                onAction="#onTrainingClicked"/>

                        <Button text="HR Analytics"
                                fx:id="btnAnalytics"
                                prefWidth="180"
                                onAction="#onAnalyticsClicked"/>

                    </children>
                </VBox>

                <!-- A simple content panel (static) -->
                <VBox spacing="10" prefWidth="520">
                    <children>
                        <Label text="Welcome to the HR Dashboard"
                               style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                        <TextArea fx:id="txtDisplay"
                                  wrapText="true"
                                  editable="false"
                                  prefHeight="350"
                                  prefWidth="520"
                                  text="Select an option from the menu to view details." />
                    </children>
                </VBox>

            </children>
        </HBox>

    </children>
</AnchorPane>
