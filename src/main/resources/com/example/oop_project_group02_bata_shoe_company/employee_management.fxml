<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.oop_project_group02_bata_shoe_company.EmployeeManagement"
            prefHeight="500.0" prefWidth="800.0">

    <children>

        <!-- Header -->
        <Label text="Employee Management"
               layoutX="20" layoutY="20"
               style="-fx-font-size: 24px; -fx-font-weight: bold;" />

        <HBox layoutX="20" layoutY="70" spacing="20">
            <children>

                <!-- Sidebar Menu -->
                <VBox spacing="10">
                    <children>

                        <Button text="Add Employee"
                                fx:id="btnAddEmployee"
                                prefWidth="180"
                                onAction="#onAddEmployeeClicked"/>

                        <Button text="Update Employee"
                                fx:id="btnUpdateEmployee"
                                prefWidth="180"
                                onAction="#onUpdateEmployeeClicked"/>

                        <Button text="Delete Employee"
                                fx:id="btnDeleteEmployee"
                                prefWidth="180"
                                onAction="#onDeleteEmployeeClicked"/>

                        <Button text="Search Employee"
                                fx:id="btnSearchEmployee"
                                prefWidth="180"
                                onAction="#onSearchEmployeeClicked"/>

                        <Button text="View All Employees"
                                fx:id="btnViewAllEmployees"
                                prefWidth="180"
                                onAction="#onViewAllEmployeesClicked"/>

                    </children>
                </VBox>

                <!-- Static Content Panel -->
                <VBox spacing="10" prefWidth="520">
                    <children>

                        <Label text="Employee Management Panel"
                               style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                        <TextArea fx:id="txtDisplay"
                                  editable="false"
                                  wrapText="true"
                                  prefHeight="350" prefWidth="520"
                                  text="Use the buttons on the left to manage employee records." />

                    </children>
                </VBox>

            </children>
        </HBox>

    </children>
</AnchorPane>
