<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="630.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop_project_group02_bata_shoe_company.Summy.ExpenseTracker">

    <children>

        <Label layoutX="232.0" layoutY="25.0" text="Expense Tracker">
            <font>
                <Font name="System Bold Italic" size="20.0" />
            </font>
        </Label>

        <Text layoutX="52.0" layoutY="99.0" text="Date" />
        <Text layoutX="52.0" layoutY="137.0" text="Department" />
        <Text layoutX="55.0" layoutY="181.0" text="Amount" />
        <Text layoutX="55.0" layoutY="217.0" text="Purpose" />

        <!-- Input Controls -->
        <DatePicker fx:id="datePicker" layoutX="182.0" layoutY="82.0" />

        <ComboBox fx:id="departmentComboBox" layoutX="182.0" layoutY="120.0" prefHeight="26.0" prefWidth="175.0" />

        <TextField fx:id="amountField" layoutX="182.0" layoutY="163.0" prefHeight="26.0" prefWidth="175.0" />

        <TextArea fx:id="purposeTextArea" layoutX="179.0" layoutY="199.0" prefHeight="96.0" prefWidth="326.0" />

        <!-- Table -->
        <TableView fx:id="expenseTable" layoutX="92.0" layoutY="385.0" prefHeight="222.0" prefWidth="431.0">

            <columns>
                <TableColumn fx:id="dateColumn" prefWidth="108.0" text="Date" />

                <TableColumn fx:id="departmentColumn" prefWidth="95.2" text="Department" />

                <TableColumn fx:id="purposeColumn" prefWidth="100.8" text="Purpose" />

                <TableColumn fx:id="amountColumn" prefWidth="127.2" text="Amount" />
            </columns>

        </TableView>

        <!-- Buttons -->
        <Button layoutX="182.0" layoutY="308.0" onAction="#logExpense" text="Log Expense" />

        <Button layoutX="182.0" layoutY="347.0" onAction="#downloadExpensePdf" text="Download Expense Summary PDF" />

    </children>
</AnchorPane>
